RULE NEW Project:Building:SRRCat
  DATATYPE
    String
  LONGFORM
    SkylightRoofRatioCategory
  DESCRIPTION
    ""  
  HELP
    ""  
  REFERENCE 
    
  INPUTCLASS
    NotInput  
  DEFAULT
    IF(LocalStatus(CondSRR) = 0)
    THEN UNCHANGED
    ELSE IF(CondSRR <= 0.20)
      THEN "LTE 0.2"
      ELSE IF(CondSRR > 0.20) 
        THEN "GT 0.2"
        ELSE UNCHANGED
        ENDIF
      ENDIF
    ENDIF  
  SIZING_PROPOSED
    u:SRRCat  
  SIZING_BASELINE
    IF(LocalStatus(CondSRR) = 0)
    THEN UNCHANGED
    ELSE IF(CondSRR <= 0.20)
      THEN "LTE 0.2"
      ELSE IF(CondSRR > 0.20) 
        THEN "GT 0.2"
        ELSE UNCHANGED
        ENDIF
      ENDIF
    ENDIF 
  ANNUAL
    z:SRRCat
ENDRULE







