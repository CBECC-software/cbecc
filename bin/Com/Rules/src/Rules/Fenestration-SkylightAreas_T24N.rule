// ********** Skylight to Roof Ratio (SRR) ************************************
RULE Bldg:CondSRR

  DESCRIPTION
    ""  
  HELP
    ""  
  REFERENCE 
    
  INPUTCLASS
    NotInput  
  DEFAULT
    if( IfValidAnd( CondExtRoofArea > 0) .AND.
        IfValidAnd( CondExtSkyltArea > 0 ) )
    then  CondExtSkyltArea / CondExtRoofArea
    else  0
    endif
  SIZING_PROPOSED
    u:CondSRR
  SIZING_BASELINE
    if( IfValidAnd( CondExtRoofArea > 0) .AND.
        IfValidAnd( CondExtSkyltArea > 0 ) )
    then  CondExtSkyltArea / CondExtRoofArea
    else  0
    endif
  ANNUAL  
    z:CondSRR
ENDRULE
