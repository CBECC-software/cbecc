            IfValidAnd( IntLPDNonReg >= 0 ) ) 
    then  ; space level, user input lighting power
       IntLPDNonReg*FlrArea 
    else UNDEFINED
    endif endif endif
  DEFAULT : S901G
    if( Spc:HasNoInternalLds = 1 ) ; Non Regulated Lighting Power not allowed in residential spaces
    then UNDEFINED
    else if( u:IntLtgSysChildren > 0 ) 
    then   ; ; Power Specified via Interior Lighting System
      SumChildren( u:IntLtgSys:NonRegLtgPwr )
    else if(IfValidAnd( FlrArea > 0 ) .AND. 
            IfValidAnd( IntLPDNonReg >= 0 ) ) 
