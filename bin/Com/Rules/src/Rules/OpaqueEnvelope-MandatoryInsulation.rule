//
// -------------- Check for Mandatory Wall U-Factor Compliance -----------------
RULE NEW ExtWall:MandatoryInsComp
  RULESETS
    T24N
  DATATYPE
    String
  LONGFORM
    MandatoryInsulationCompliance
  INPUTCLASS
    NotInput
  DESCRIPTION
    "Checks that the wall complies with the requirements of Section 120.7,
    Mandatory Insulation Requirements."
  HELP
    ""
  REFERENCE
    T24-Sec120.7
  CHECKCODE
    if( LocalCompAssigned(ConsAssmRef) = 0 ) then 
      UNCHANGED
    else
      switch (Status)
        case "New":
          switch (ConsType)
            case "MetalBuildingWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of metal building wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 120.7.",Name,OverallUFactor,Proj:MtlBldgWallMaxUFac[1] )
              else
                UNCHANGED
              endif endif
            case "MetalFrameWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of metal frame wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 120.7.",Name,OverallUFactor,Proj:MtlFrmWallMaxUFac[1] )
              else
                UNCHANGED
              endif endif
            case "MassLightWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostError("The u-factor of light mass wall construction '%s' is '%.3f', 
                           which exceeds the maximum allowable value, '%.3f', specified in 
                           Section 120.7.",Name,OverallUFactor,Proj:MassLightWallMaxUFac[1] )
              else
                UNCHANGED
              endif endif
            case "MassHeavyWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostError("The u-factor of heavy mass wall construction '%s' is '%.3f', 
                           which exceeds the maximum allowable value, '%.3f', specified in 
                           Section 120.7.",Name,OverallUFactor,Proj:MassHeavyWallMaxUFac[1] )
              else
                UNCHANGED
              endif endif
            case "WoodFramingAndOtherWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of wood frame or other wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 120.7.",Name,OverallUFactor,Proj:WoodFrmAndOtherWallMaxUFac[1] )
              else
                UNCHANGED
              endif endif
            case "SpandrelWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of glass spandrel and curtain wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 120.7.",Name,OverallUFactor,Proj:SpandrelWallMaxUFac[1] )
              else
                UNCHANGED
              endif endif
            default:
              PostError("Unknown wall contruction type")
          endswitch
        case "Altered":
          switch (ConsType)
            case "MetalBuildingWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of metal building wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 141.0(b).",Name,OverallUFactor,Proj:MtlBldgWallMaxUFac[2] )
              else
                UNCHANGED
              endif endif
            case "MetalFrameWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of metal frame wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 141.0(b).",Name,OverallUFactor,Proj:MtlFrmWallMaxUFac[2] )
             else
                UNCHANGED
              endif endif
            case "WoodFramingAndOtherWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of wood frame and other wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 141.0(b).",Name,OverallUFactor,Proj:WoodFrmAndOtherWallMaxUFac[2] )
              else
                UNCHANGED
              endif endif
            case "SpandrelWall":
              if( Parent(CondgType) = "Unconditioned" .AND. 
                  Parent(NonCompIntSurf) <= 0 ) then
                UNCHANGED
              else if( NonCompIns = 1 ) then
                PostWarning("The u-factor of glass spandrel and curtain wall construction '%s' is '%.3f', 
                             which exceeds the maximum allowable value, '%.3f', specified in 
                             Section 141.0(b).",Name,OverallUFactor,Proj:SpandrelWallMaxUFac[2] )
              else
                UNCHANGED
              endif endif
            default:
              UNCHANGED
          endswitch
        default:
          UNCHANGED
      endswitch
    endif
ENDRULE


// -----------------------------------------------------------------------------
RULE NEW Roof:MandatoryInsComp
  RULESETS
    T24N
  DATATYPE
    String
  LONGFORM
    MandatoryInsulationCompliance
  INPUTCLASS
    NotInput
  DESCRIPTION
    "Checks that the roof complies with the requirements of Section 120.7,
    Mandatory Insulation Requirements."
  HELP
    ""
  REFERENCE
    T24-Sec120.7
  CHECKCODE
    if( LocalCompAssigned(ConsAssmRef) = 0 ) then
      UNCHANGED
    else
      switch (Status)
      case "New":
        switch (ConsType)
        case "MetalBuildingRoof":
          if( Parent(CondgType) = "Unconditioned" .AND. 
              Parent(NonCompIntSurf) <= 0 ) then
            UNCHANGED
          else if( NonCompIns = 1 ) then
            PostWarning("The u-factor of metal building roof construction '%s' is '%.3f', 
                         which exceeds the maximum allowable value, '%.3f', specified in 
                         Section 120.7.",Name,OverallUFactor,Proj:MtlBldgRoofMaxUFac[1] )
          else
            UNCHANGED
          endif endif
        case "WoodFramingAndOtherRoof":
          if( Parent(CondgType) = "Unconditioned" .AND. 
              Parent(NonCompIntSurf) <= 0 ) then
            UNCHANGED
          else if( NonCompIns = 1 ) then
            PostWarning("The u-factor of wood framed and other roof construction '%s' is '%.3f', 
                         which exceeds the maximum allowable value, '%.3f', specified in 
                         Section 120.7.",Name,OverallUFactor,Proj:WoodFrmAndOtherRoofMaxUFac[1] )
          else
            UNCHANGED
          endif endif
        default:
          PostError("Unknown roof contruction type for roof '%s'",Name)
        endswitch
      case "ExistingAlteration":
        if( BldgTypeForRoof = "NonResidential" ) then
          if( Project:CliZnNum = 2 .OR. Project:CliZnNum >= 10 ) then
            if( Parent(CondgType) = "Unconditioned" .AND. 
                Parent(NonCompIntSurf) <= 0 ) then
              UNCHANGED
            else if( NonCompIns = 1 ) then
              PostWarning("The u-factor of roof '%s' is '%.3f', 
                           which exceeds the maximum allowable value, '%.3f', 
                           specified in Section 141.0(b), although this may be 
                           acceptable if Section 141.0(b)1A is met.",Name,
                           OverallUFactor,Proj:WoodFrmAndOtherRoofMaxUFac[1] )
            else
              UNCHANGED
            endif endif
          else
            if( Parent(CondgType) = "Unconditioned" .AND. 
                Parent(NonCompIntSurf) <= 0 ) then
              PostWarning("Roof '%s' u-factor exceeds 0.082
                           violating Section 141.0(b)2Biii",Name)
            else
              UNCHANGED
            endif
          endif
        else   // "Residential"
          if( Parent(CondgType) = "Unconditioned" .AND. 
              Parent(NonCompIntSurf) <= 0 ) then
            UNCHANGED
          else if( NonCompIns = 1 ) then
            PostWarning("Roof '%s' u-factor exceeds 0.055
                         violating Section 141.0(b)2Biii",Name)
          else
            UNCHANGED
          endif endif
        endif
      default:
        UNCHANGED
      endswitch
    endif
ENDRULE


