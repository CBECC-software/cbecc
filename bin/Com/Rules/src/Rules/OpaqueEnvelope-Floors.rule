// -------------- Check for Mandatory Floor U-Factor Compliance ----------------
RULE NEW ExtFlr:NonCompIns
  RULESETS
    T24N
  DATATYPE
    Float
  LONGFORM
    NonCompliantInsulation
  INPUTCLASS
    NotInput
  DESCRIPTION
    "Flags floors that do not comply with the requirements of Section 120.7,
    Mandatory Insulation Requirements."
  HELP
    ""
  REFERENCE
    T24-Sec120.7
  CHECKCODE
    if( LocalCompAssigned(ConsAssmRef) = 0 ) then 
      UNCHANGED
    else if( LocalStatus(ConsType) < 1 ) then
      PostError("A valid construction assembly must be assigned to surface '%s'
                 in space '%s'.",Name,Spc:Name)
    else
      switch (Status)
        case "New":
          switch (ConsType)
            case "MassFloor":
              if( OverallUFactor > Proj:MassFlrMaxUFac[1] + 0.001 ) then 1
              else 0
              endif
            case "OtherFloor":
              if( OverallUFactor > Proj:OtherFlrMaxUFac[1] + 0.001 ) then 1
              else 0
              endif
            default:
              PostError("Unknown floor construction type for floor '%s'",Name)
          endswitch
        case "ExistingAlteration":
          switch (ConsType)
            case "MassFloor":
              if( BldgTypeForExtFlr = "Residential" .AND.
                  OverallUFactor > Proj:AltMassFlrMaxUFac[1] + 0.001 ) then 1
              else 0
              endif
            case "OtherFloor":
              if( OverallUFactor > Proj:OtherFlrMaxUFac[2] + 0.001 ) then 1
              else 0
              endif
            default:
              0
          endswitch
        default:
          0
      endswitch
    endif endif
ENDRULE


