  DATATYPE
    Float
  LONGFORM 
    CodeVentilationFlowWithMultiplier
  INPUTCLASS 
    NotInput
  UNITS
    cfm
  DEFAULT
    CodeVentFlow * Mult
  SIZING
    CodeVentFlow * Mult
  ANNUAL  
    z:CodeVentFlowWithMult
ENDRULE
